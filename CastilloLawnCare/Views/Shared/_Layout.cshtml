<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CastilloLawnCare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CastilloLawnCare.styles.css" asp-append-version="true" />
    <style>
        #imageOverlay{
            border:3px solid blue;
            width: 100%;
            height: 450px;
            margin-top: -15px;
        }

        #grassImage{
            width: 100%;
            max-height: 100%;
            display:block;
        }
        
        #logo {
            position:absolute;
            width: 100px;
            margin-top: 20px;
        }

        #labelLogo {
            position:absolute;
            margin-top: -400px;
            width: 350px;
            height: 150px;
            margin-left: 500px;
        }

        #labelName{
            width: 238px;
            text-align: center;
            font-family: apple chancery, cursive;
            margin-left: 110px;
            display: block;
            color: #FFCC00;
        }
    </style>
</head>
<body style="border: 1px solid black;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CastilloLawnCare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div id=imageOverlay>
        <img id="grassImage" src="~/Images/petar-tonchev-c-5-QE5kBYk-unsplash.jpg"/>
        <div id="labelLogo"> 
            <img id="logo" src="~/Images/clipart2394299.png" />
            <h1 id="labelName">Castillo Lawn & Care LLC.</h1>
        </div>
    </div>
    
    <div class="container" style="border: 3px solid red; position:relative;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CastilloLawnCare - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
